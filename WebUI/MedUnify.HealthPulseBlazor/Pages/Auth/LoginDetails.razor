@inject TokenAuthStateProvider _authStateProvider

<div class="row mb-3 text-center">
    <div class="col-md-3 text-end">
        <strong>ClientId:</strong>
    </div>
    <div class="col-md-3 text-start">
        @userClaims.ClientId
    </div>
    <div class="col-md-3 text-end">
        <strong>OrganizationId:</strong>
    </div>
    <div class="col-md-3 text-start">
        @userClaims.OrganizationId
    </div>
</div>

@code {
    private OAuthClientRM userClaims = new OAuthClientRM();

    protected override async Task OnInitializedAsync()
    {
        userClaims = await _authStateProvider.GetUserClaimsAsync();
    }
}
